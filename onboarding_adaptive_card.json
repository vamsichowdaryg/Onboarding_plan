        {
          "type": "Input.Toggle",
          "id": "general_2",
          "title": "Is the workplace fully equipped and ready for work?",
          "value": "false",
          "wrap": true,
          "spacing": "Small"
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "Input.Toggle",
              "id": "trainings_section",
